# DigitalOcean Managed Database Configuration
# Option 1: Use connection URL (recommended for DigitalOcean managed databases)
DB_CONNECTION_URL=postgresql://username:password@host:port/database?sslmode=require

# Option 2: Use individual parameters (alternative)
# DB_HOST=your-db-cluster.db.ondigitalocean.com
# DB_NAME=your-database-name
# DB_USER=your-username
# DB_PASSWORD=your-password
# DB_PORT=25060

# Other environment variables
NODE_ENV=production
PORT=3000

# WhatsApp Configuration
WHATSAPP_ACCESS_TOKEN=your_whatsapp_access_token
WHATSAPP_PHONE_NUMBER_ID=your_phone_number_id
WHATSAPP_WEBHOOK_VERIFY_TOKEN=your_webhook_verify_token

# WhatsApp Flow IDs
WHATSAPP_ONBOARDING_FLOW_ID=730025356543879
WHATSAPP_LOGIN_FLOW_ID=646618197870307

# Redis Configuration (optional)
REDIS_URL=redis://localhost:6379