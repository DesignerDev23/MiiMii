# ==============================================
# MIIMII FINTECH PLATFORM - ENVIRONMENT VARIABLES
# ==============================================
# Copy this file to .env and fill in your actual values

# ==============================================
# APPLICATION SETTINGS
# ==============================================
NODE_ENV=production
PORT=3000
LOG_LEVEL=info

# ==============================================
# DATABASE CONFIGURATION
# ==============================================
# Option 1: Use DATABASE_URL (recommended for cloud deployment)
DATABASE_URL=postgresql://username:password@localhost:5432/miimii_fintech
DB_HOST=localhost
DB_PORT=5432
DB_NAME=miimii_fintech
DB_USER=your_username
DB_PASS=your_password

# Option 2: Use individual database variables (alternative)
# DB_NAME=miimii_db
# DB_USER=your_db_user
# DB_PASSWORD=your_db_password
# DB_HOST=localhost
# DB_PORT=5432

# ==============================================
# REDIS CONFIGURATION
# ==============================================
REDIS_URL=redis://localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# ==============================================
# WHATSAPP BUSINESS API CONFIGURATION
# ==============================================
# Get these from Facebook Business Manager > WhatsApp > API Setup
WHATSAPP_ACCESS_TOKEN=your-whatsapp-access-token
WHATSAPP_PHONE_NUMBER_ID=your-phone-number-id
WHATSAPP_BUSINESS_ACCOUNT_ID=your-business-account-id
WHATSAPP_WEBHOOK_VERIFY_TOKEN=your-webhook-verify-token

# ==============================================
# AI/ML SERVICES
# ==============================================
# OpenAI API for AI assistant features
OPENAI_API_KEY=your-openai-api-key
OPENAI_MODEL=gpt-4-turbo

# Google Cloud credentials (for speech-to-text)
GOOGLE_APPLICATION_CREDENTIALS=path/to/google-service-account.json

# ==============================================
# FINTECH INTEGRATION - BELLBANK
# ==============================================
BELLBANK_CONSUMER_KEY=your-bellbank-consumer-key
BELLBANK_CONSUMER_SECRET=your-bellbank-consumer-secret

# ==============================================
# FINTECH INTEGRATION - BILAL
# ==============================================
BILAL_USERNAME=your-bilal-username
BILAL_PASSWORD=your-bilal-password
DATA_PURCHASE_FEE=10

# ==============================================
# KYC VERIFICATION - DOJAH
# ==============================================
DOJAH_APP_ID=your-dojah-app-id
DOJAH_SECRET_KEY=your-dojah-secret-key

# ==============================================
# SECURITY & WEBHOOKS
# ==============================================
WEBHOOK_SECRET=your-webhook-secret-key

# ==============================================
# RATE LIMITING
# ==============================================
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# ==============================================
# PLATFORM FEES
# ==============================================
PLATFORM_FEE=5
MAINTENANCE_FEE=100

# ==============================================
# WEBHOOK URLS (Configure these in your service providers)
# ==============================================
# WhatsApp Webhook URL: https://your-domain.com/api/webhook/whatsapp
# BellBank Webhook URL: https://your-domain.com/api/webhook/bellbank
# Bilal Webhook URL: https://your-domain.com/api/webhook/bilal
# Dojah Webhook URL: https://your-domain.com/api/webhook/dojah

# WhatsApp Business API (Gupshup) Configuration
GUPSHUP_API_KEY=your-gupshup-api-key
GUPSHUP_APP_NAME=your-app-name
GUPSHUP_SOURCE_NUMBER=917834811114
GUPSHUP_NAMESPACE=your-namespace
GUPSHUP_WEBHOOK_VERIFY_TOKEN=your-webhook-verify-token

# WhatsApp Flow IDs (Create these in Gupshup Console)
GUPSHUP_ONBOARDING_FLOW_ID=your-onboarding-flow-id
GUPSHUP_KYC_FLOW_ID=your-kyc-flow-id
GUPSHUP_TRANSACTION_FLOW_ID=your-transaction-flow-id

# Encryption Keys
ENCRYPTION_KEY=your-32-character-encryption-key

# File Upload Configuration
MAX_FILE_SIZE=10485760
UPLOAD_PATH=./uploads

# Email Configuration (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# External API Keys
CURRENCY_API_KEY=your-currency-api-key
BANK_API_KEY=your-bank-api-key