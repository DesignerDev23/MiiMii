{
  "version": "7.2",
  "data_api_version": "3.0",
  "routing_model": {
    "PIN_VERIFICATION_SCREEN": []
  },
  "screens": [
    {
      "id": "PIN_VERIFICATION_SCREEN",
      "title": "Transaction PIN Verification",
      "terminal": true,
      "success": true,
      "data": {},
      "layout": {
        "type": "SingleColumnLayout",
        "children": [
          {
            "type": "Form",
            "name": "transaction_pin_form",
            "children": [
              {
                "type": "TextHeading",
                "text": "Transaction PIN Verification"
              },
              {
                "type": "TextBody",
                "text": "Please enter your 4-digit PIN to authorize this transaction."
              },
              {
                "type": "TextInput",
                "required": true,
                "label": "PIN",
                "name": "pin",
                "input-type": "passcode"
              },
              {
                "type": "Footer",
                "label": "Authorize Transaction",
                "on-click-action": {
                  "name": "complete",
                  "payload": {
                    "pin": "${form.pin}"
                  }
                }
              }
            ]
          }
        ]
      }
    }
  ]
}
