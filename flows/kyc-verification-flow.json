          {
            "type": "Form",
            "name": "intro_form",
            "children": [
              {
                "type": "RadioButtonsGroup",
                "name": "verification_level",
                "label": "Choose verification level:",
                "required": true,
                "data-source": [
                  {
                    "id": "basic",
                    "title": "🔵 Basic Verification",
                    "description": "ID document only • $10,000 limits"
                  },
                  {
                    "id": "enhanced",
                    "title": "🟢 Enhanced Verification", 
                    "description": "ID + Address proof • $50,000 limits"
                  },
                  {
                    "id": "premium",
                    "title": "🔶 Premium Verification",
                    "description": "Full verification • Unlimited access"
                  }
                ]
              },
              {
                "type": "Footer",
                "label": "Start Verification",
                "on-click-action": {
                  "name": "navigate",
                  "next": {
                    "type": "screen",
                    "name": "DOCUMENT_TYPE"
                  },
                  "payload": {}
                }
              }
            ]
